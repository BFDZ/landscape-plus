<% if (site.posts.length){ %>
  <div class="widget-wrap">
    <h3 class="widget-title"><%= __('tools') %></h3>
    <div class="widget">
      <ul>
        <% for (var i in (config.tools || theme.tools)){ %>
          <li>
            <a href="<%- theme.tools[i] %>" target="_blank"><%= i %></a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
<% } %>